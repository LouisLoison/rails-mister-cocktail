<h1>Cocktail: <%= @cocktail.name %> </h1>
<% @cocktail.doses.each do |dose| %>
  <h2> description: <%= dose.description  %> </h2>
  <h3> ingredient <%= dose.ingredient.name  %> </h3>
  <h2> <%= link_to 'delete', dose_path(dose), method: :delete %></h2>

<% end %>


<h2> <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail) %></h2>

